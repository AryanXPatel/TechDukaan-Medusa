# Production Environment Variables for Azure Deployment
# These will be set in Azure Key Vault during deployment

# Core Configuration
NODE_ENV=production
PORT=9000

# Database (Azure PostgreSQL Flexible Server)
DATABASE_URL=

# Redis (Azure Cache for Redis)
REDIS_URL=

# Security
JWT_SECRET=
COOKIE_SECRET=

# CORS Configuration for Production
STORE_CORS=https://techdukaanweb.vercel.app,https://localhost:3000
ADMIN_CORS=https://techdukaanweb.vercel.app,https://localhost:3000
AUTH_CORS=https://techdukaanweb.vercel.app,https://localhost:3000

# Azure Blob Storage
STORAGE_PROVIDER=azure
STORAGE_CONNECTION_STRING=
STORAGE_CONTAINER=product-images

# MeiliSearch (MeiliSearch Cloud)
MEILI_HTTP_ADDR=
MEILI_MASTER_KEY=

# Worker Mode (server or worker)
MEDUSA_WORKER_MODE=server
