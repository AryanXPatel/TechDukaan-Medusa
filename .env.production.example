# TechDukaan Production Environment Template
# Copy this file to .env.production.ubuntu and fill in your actual values

# Core Configuration
NODE_ENV=production
PORT=9000

# Database (Azure PostgreSQL Flexible Server)
DATABASE_URL=postgres://your_username:your_password@your_server.postgres.database.azure.com:5432/postgres?ssl=true

# Redis (Docker service name for container networking)
REDIS_URL=redis://redis:6379

# Security Secrets (Generate using openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
COOKIE_SECRET=your_cookie_secret_here

# CORS Configuration for Production
STORE_CORS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000
ADMIN_CORS=https://admin.yourdomain.com,http://localhost:7001
AUTH_CORS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000

# Azure Blob Storage
STORAGE_PROVIDER=azure
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
AZURE_STORAGE_CONTAINER_NAME=medusa-uploads

# MeiliSearch (Docker service name for container networking)
MEILI_HTTP_ADDR=meilisearch:7700
MEILI_MASTER_KEY=your_meilisearch_master_key

# Worker Mode (shared for single container deployment)
WORKER_MODE=shared
